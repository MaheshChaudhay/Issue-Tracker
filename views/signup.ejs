<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/create_project.css" />
    <title>Document</title>
  </head>
  <body>
    <h2>SignUp</h2>
    <div id="form-div" style="height: fit-content">
      <form id="signup-form" method="POST" action="/users/signup">
        <div id="error-div"></div>
        <div class="form-item">
          <h3>Name</h3>
          <br />
          <input
            type="text"
            name="name"
            placeholder="Enter Your Name"
            required
          />
        </div>
        <div class="form-item">
          <h3>Email</h3>
          <br />
          <input
            type="email"
            name="email"
            placeholder="Enter Your Email"
            required
          />
        </div>

        <div class="form-item">
          <h3>Password</h3>
          <br />
          <input
            type="Password"
            name="password"
            placeholder="Enter Your Password"
            required
          />
        </div>
        <div>
          <input id="submit-btn" type="submit" value="SignUp" />
        </div>
      </form>
    </div>
  </body>
  <script src="/scripts/signup.js"></script>
</html>
